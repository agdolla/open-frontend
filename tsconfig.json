{
  "compilerOptions": {
    "pretty": true,
    "strictNullChecks": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "src": ["/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "style/*": ["style/*"],
      "utils/*": ["utils/*"],
      "images/*": ["images/*"],
      "data/*": ["data/*"],
      "types/*": ["types/*"]
    },
    "lib": ["dom", "es2015", "es2016", "es2018"]
  },
  "include": ["./src"],
  "exclude": ["dist/**/*", "", "public/**/*", "node_modules"]
}
